import { Request, RequestHandler } from "express";
import { users, Role } from "@prisma/client";

export type ResponseProps = {
  status: number;
  message: string | string[] | any;
  data: any;
  pages?: {
    page: number;
    totalItem: number;
    totalPage: number;
  };
};

export interface AuthRequestProps extends Request {
  user: {
    user_id: string;
    username: string;
    role: Role;
    email: string;
  };
}

